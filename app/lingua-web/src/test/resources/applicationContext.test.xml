<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.lingualearna.web.util.locale" />
	<context:component-scan base-package="com.lingualearna.web.service" />
	<context:component-scan base-package="com.lingualearna.web.translation.provider" />
	<context:component-scan base-package="com.lingualearna.web.controller" />
	
	<context:property-placeholder location="classpath:/app.test.properties" />
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<import resource="data-access.xml"/>
	<import resource="security.xml"/>

	<context:component-scan base-package="com.lingualearna.web.service" />
	<context:component-scan base-package="com.lingualearna.web.dao" />
	<context:component-scan base-package="com.lingualearna.web.util.locale" />
	<context:component-scan base-package="com.lingualearna.web.translation.provider" />
	<context:component-scan base-package="com.lingualearna.web.languages" />

	<context:property-placeholder location="classpath:/app.properties" />
	<context:spring-configured />
	<context:load-time-weaver/>
	
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />
</beans>
